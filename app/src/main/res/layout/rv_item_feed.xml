<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:padding="16dp"
    android:background="@drawable/background_checklist">

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_basic_character"
            />
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="name"
            android:textAppearance="@style/TextAppearance.App.14sp.SemiBold"
            android:textColor="@color/highlight_font"
            android:gravity="center_vertical"
            android:layout_marginStart="6dp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_upload_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3분전"
            android:textAppearance="@style/TextAppearance.App.12sp.Regular"
            android:textColor="@color/unuse_font"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="피드피드피드피드"
        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
        android:textColor="@color/basic_font"
        android:layout_marginTop="6dp"
        android:paddingHorizontal="4dp"
        app:layout_constraintTop_toBottomOf="@id/layout_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_images"/>

    <LinearLayout
        android:id="@+id/layout_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_content"
        app:layout_constraintBottom_toTopOf="@+id/layout_comment"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        >
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_stroke_12"
            android:backgroundTint="@color/transparent"
            android:visibility="gone"/>

        <!--인디케이터 -->
        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsColor="@color/unuse"
            app:dotsCornerRadius="28dp"
            app:dotsSize="8dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="2"
            android:layout_marginVertical="16dp"
            android:layout_gravity="center_horizontal"
            app:progressMode="false"
            app:selectedDotColor="@color/highlight_font"
            android:visibility="gone"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout_comment"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_images"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_comment" />
        <TextView
            android:id="@+id/tv_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:text="3"
            android:textAppearance="@style/TextAppearance.App.12sp.Regular"
            android:textColor="@color/unuse_font"
            android:gravity="center_vertical"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
