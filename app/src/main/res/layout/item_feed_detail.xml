<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_basic_character" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="name"
            android:textAppearance="@style/TextAppearance.App.14sp.SemiBold"
            android:textColor="@color/highlight_font"
            android:gravity="center_vertical"
            android:layout_marginStart="6dp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_seemore" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_more"
        android:layout_width="64dp"
        android:layout_height="57dp"
        android:background="@drawable/background_morebox"
        android:orientation="vertical"

        app:layout_constraintTop_toBottomOf="@id/layout_user_info"
        app:layout_constraintEnd_toEndOf="@id/layout_user_info"
        android:translationZ="1dp"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_feed_edit"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="수정하기"
            android:textAppearance="@style/TextAppearance.App.10sp.Medium"
            android:textColor="@color/basic_font"
            android:gravity="center"/>
        <View
            android:layout_width="48dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#EAEAEA"/>
        <TextView
            android:id="@+id/tv_feed_delete"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="삭제하기"
            android:textAppearance="@style/TextAppearance.App.10sp.Medium"
            android:textColor="@color/basic_font"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="피드피드피드피드"
        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
        android:textColor="@color/basic_font"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="4dp"
        app:layout_constraintTop_toBottomOf="@id/layout_user_info"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/layout_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_content"
        app:layout_constraintBottom_toTopOf="@+id/layout_info"
        app:layout_constraintStart_toStartOf="parent"
        >
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_stroke_12"
            android:backgroundTint="@color/transparent" />

        <!--인디케이터 -->
        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsColor="@color/unuse"
            app:dotsCornerRadius="28dp"
            app:dotsSize="8dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="2"
            android:layout_marginVertical="16dp"
            android:layout_gravity="center_horizontal"
            app:progressMode="false"
            app:selectedDotColor="@color/highlight_font" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_images"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_comment"/>
        <TextView
            android:id="@+id/tv_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:text="3"
            android:textAppearance="@style/TextAppearance.App.12sp.Regular"
            android:textColor="@color/unuse_font"
            android:gravity="center_vertical"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_upload_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3분전"
            android:textAppearance="@style/TextAppearance.App.12sp.Regular"
            android:textColor="@color/unuse_font"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f4f4f4"
        android:layout_marginVertical="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_info" />
</androidx.constraintlayout.widget.ConstraintLayout>