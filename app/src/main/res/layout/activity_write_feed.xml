<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    
    <LinearLayout
        android:id="@+id/layout_images"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="31dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/iv_back"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/btn_rectangle_8"
        android:backgroundTint="@color/color_box">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_picture" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_image_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAppearance="@style/TextAppearance.App.14sp.Medium"
                android:textColor="@color/unuse_font"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/10"
                android:textAppearance="@style/TextAppearance.App.14sp.Medium"
                android:textColor="@color/unuse_font"/>
        </LinearLayout>

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_input_content"
        android:layout_width="match_parent"
        android:layout_height="349dp"
        android:background="@drawable/ic_inputbox"
        android:textAppearance="@style/TextAppearance.App.14sp.Medium"
        android:textColor="@color/basic_font"
        android:textColorHint="@color/unuse_font"
        android:gravity="top"
        android:hint="내용을 입력해주세요"
        android:layout_marginTop="17dp"
        android:layout_marginHorizontal="20dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/layout_images"
        app:layout_constraintStart_toStartOf="parent"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_input_button"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/ic_button"
        android:text="작성"
        android:textAppearance="@style/TextAppearance.App.16sp.SemiBold"
        android:textColor="#ffffff"
        android:enabled="false"
        android:layout_marginHorizontal="22dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>