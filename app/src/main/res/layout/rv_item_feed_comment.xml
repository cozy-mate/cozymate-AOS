<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/character_id_1"
            />
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="name"
            android:textAppearance="@style/TextAppearance.App.14sp.Medium"
            android:textColor="@color/color_font"
            android:gravity="center_vertical"
            android:layout_marginStart="6dp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_seemore"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:text="삭제하기"
        android:textAppearance="@style/TextAppearance.App.10sp.Medium"
        android:textColor="@color/basic_font"
        android:gravity="center"
        android:background="@drawable/background_morebox"
        android:translationZ="1dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layout_info"
        app:layout_constraintEnd_toEndOf="parent"
        />




    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="대충 댓글."
        android:textAppearance="@style/TextAppearance.App.12sp.Medium"
        android:textColor="@color/highlight_font"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/layout_info"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="24.12.07"
        android:textAppearance="@style/TextAppearance.App.12sp.Regular"
        android:textColor="@color/unuse_font"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_content"
        app:layout_constraintBottom_toTopOf="@id/iv_line"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/iv_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#F1F2F4"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>