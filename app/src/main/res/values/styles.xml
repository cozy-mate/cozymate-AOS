    <!-- 반투명 액티비티 -->
    <style name="Theme.TransparentActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Chip 스타일 -->
    <style name="CustomChip_12">
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:backgroundTint">@color/color_box</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/unuse_font</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 데이트피커 스타일 -->
    <style name="AppTheme.NumberPicker" parent="">
        <item name="colorControlNormal">@color/main_blue</item>
        <item name="android:textColorPrimary">@color/color_font</item>
    </style>

    <style name="OptionBox">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/custom_option_text_color</item>
        <item name="fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">12dp</item>
        <item name="android:background">@drawable/custom_option_box_background</item>
    </style>

    <style name="SelectChip">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/custom_option_text_color</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">12dp</item>
        <item name="android:background">@drawable/custom_select_chip_background</item>
    </style>

    <style name="CustomChip_8">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:textColor">@color/custom_option_text_color</item>
        <item name="fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">12dp</item>
        <item name="android:background">@drawable/custom_chip_8_background</item>
    </style>

    <style name="RoommateElementChip">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textColor">@color/custom_option_text_color</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.14sp.Medium</item>
        <item name="android:background">@drawable/custom_select_chip_background</item>
    </style>

    <style name="RoomHashtagChip">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:drawableEnd">@drawable/ic_close</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.14sp.Medium</item>
        <item name="android:background">@drawable/custom_hashtag_chip</item>
        <item name="backgroundColor">@color/sub_color2</item>
    </style>

    <style name="RvOtherUserInfoBox">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="paddingStart">5dp</item>
        <item name="paddingEnd">5dp</item>
        <item name="android:textColor">@color/color_font</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">10dp</item>
        <item name="android:background">@drawable/custom_option_box_background_default</item>
    </style>

    <style name="custom_dialog_cancel_btn">
        <item name="android:width">105dp</item>
        <item name="android:height">45dp</item>
        <item name="android:background">@drawable/custom_dialog_btn_background_8</item>
        <item name="android:textColor">@color/unuse_font</item>
        <item name="android:textAppearance">@style/TextAppearance.App.14sp.SemiBold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:backgroundTint">@color/unuse</item>
    </style>

    <style name="custom_dialog_ok_btn">
        <item name="android:width">105dp</item>
        <item name="android:height">45dp</item>
        <item name="android:background">@drawable/custom_dialog_btn_background_8</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.App.14sp.SemiBold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:backgroundTint">@color/main_blue</item>
    </style>

    <style name="ShapeAppearance.FloatingActionButton.Circular" parent="">
        <item name="cornerSize">50%</item> <!-- 50%로 설정하면 원형 -->
    </style>

    <!-- Splash screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

